# =============================================================================
# .env.example - Variables para PRODUCCIÓN (Docker Compose)
# =============================================================================
# Copia este archivo: cp .env.example .env
# Luego configura los valores para tu entorno de producción.
# =============================================================================

# --- Base de Datos (para docker-compose.yml) ---
POSTGRES_USER=finanzas
POSTGRES_PASSWORD=CAMBIA_ESTA_PASSWORD_SEGURA
POSTGRES_DB=finanzas_pro

# --- Cloudflare Tunnel (opcional) ---
# Obtén tu token en: https://one.dash.cloudflare.com/
# Networks → Tunnels → Create a tunnel
CLOUDFLARE_TUNNEL_TOKEN=tu_token_aqui

# --- Seguridad ---
ALLOWED_ORIGINS=https://tu-dominio.com
RATE_LIMIT_ENABLED=true
REGISTRATION_ENABLED=false

# --- Telegram Backups (opcional) ---
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=tu_bot_token
TELEGRAM_CHAT_ID=tu_chat_id
